<Page x:Class="iTeach.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:iTeach.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel  HorizontalAlignment="Center">
                <TextBlock FontSize="15" Text="Введите логин:" Margin="5" Width="150"/>
                <TextBox Width="150" Name="TxbLogin"/>
            </StackPanel>
            <StackPanel  HorizontalAlignment="Center" Margin="5,5,5,0">
                <TextBlock FontSize="15" Text="Введите логин:" Margin="5" Width="150"/>
                <PasswordBox Width="150" Height="25" Name="PsbPassword" Background="Aqua"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,5,0">
                <Button Name="BntSign" FontSize="15" Click="BntSign_Click" Content="Регистрация" Margin="5,0,5,5" Style="{StaticResource AcceptButton}" />
                <Button Content="Войти" FontSize="15" Name="BtnLogin" Click="BtnLogin_Click" Margin="0,0,5,5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
