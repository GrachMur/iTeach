<Window x:Class="iTeach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iTeach"
        mc:Ignorable="d"
        Title="iTeach" Height="450" Width="800">
    <Grid>
        <StackPanel Background="Gray" />
        <StackPanel  Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Image Source="/Resources/fire.png" Width="100"/>
            <TextBlock FontSize="18pt" FontWeight="Bold" Margin="20" Text="{Binding ElementName=FrameMain, Path=Content.Title}" VerticalAlignment="Center"  FontFamily="Times New Roman"/>
        </StackPanel>
        <Frame Name="FrameMain" Grid.Row="1" Grid.Column="0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
